# --- Git Aliases ---
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gp="git push"
alias gl="git log --oneline --graph --decorate"

# --- Navigation ---
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# --- Modern Replacements ---
alias ls="ls --color=auto"
alias ll="ls -lah"
alias l="ls -F"
alias cls="clear"

# --- Python & Data Science ---
alias py="python3"
alias pip="python3 -m pip"
alias venv="python3 -m venv venv"
alias activate="source venv/bin/activate"
alias pyclean='find . -type f -name "*.py[co]" -delete -or -type d -name "__pycache__" -delete'

# --- Web Development (Node/NPM/Yarn) ---
alias n="npm"
alias ni="npm install"
alias ns="npm start"
alias nd="npm run dev"
alias nb="npm run build"

# --- AI Agent & CLI Tools (The AI Powerhouse) ---
alias oc="openclaw"
alias ocs="openclaw status"
alias ocl="openclaw logs"
alias ocr="openclaw gateway restart"
alias ocw="cd /home/codespace/.openclaw/workspace"
alias och="openclaw help"

# Claude Code (Anthropic AI)
alias cl="claude"
alias cla="claude chat"
alias cls="claude status"
alias clc="claude config"

# GitHub Copilot & Codex Tools
alias cop="gh copilot"
alias cope="gh copilot explain"
alias cops="gh copilot suggest"

# Aider (AI Pair Programmer)
alias ad="aider"
alias adp="aider --python"
alias adw="aider --web"

# --- System & Network ---
alias h="history"
alias myip="curl -s ifconfig.me"
alias path='echo -e ${PATH//:/\\n}'
