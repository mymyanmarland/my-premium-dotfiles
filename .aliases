# --- Git Aliases ---
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gp="git push"
alias gl="git log --oneline --graph --decorate"

# --- Navigation ---
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# --- Modern Replacements ---
alias ls="ls --color=auto"
alias ll="ls -lah"
alias l="ls -F"
alias cls="clear"

# --- Python & Data Science ---
alias py="python3"
alias pip="python3 -m pip"
alias venv="python3 -m venv venv"
alias activate="source venv/bin/activate"

# --- Web Development ---
alias ni="npm install"
alias nd="npm run dev"
alias nb="npm run build"

# --- AI Tools ---
alias oc="openclaw"
alias cl="claude"
alias cla="claude chat"
alias cop="gh copilot"
alias ad="aider"

# --- System ---
alias h="history"
alias path='echo -e ${PATH//:/\\n}'
